---
permalink: /api/cinemas.json
---
[
  {% for cinema in collections.cinemas  %}
    {% set data = cinema.data %}
    {
      "slug": "{{ data.title | slug }}",
      "title": "{{ data.title }}",
      "image": "{{ data.image | safe }}",
      "image_small": "{{ data.image | replace('/image/upload/', '/image/upload/w_75/e_trim/w_75,h_75,c_fill,g_north_west/f_auto/') | safe}}",
      "location": {{ data.location | safe }}
    }{{ '' if loop.last else ',' }}
  {% endfor  %}
]